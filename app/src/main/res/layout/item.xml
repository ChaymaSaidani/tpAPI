<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
      android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: " />

            <TextView
                android:id="@+id/textViewIntitule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intitule: " />

            <TextView
                android:id="@+id/textViewSpecialite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialité: " />

            <TextView
                android:id="@+id/textViewSociete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Société: " />

            <TextView
                android:id="@+id/textViewNbPostes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nb Postes: " />

            <TextView
                android:id="@+id/textViewPays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pays: " />



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>